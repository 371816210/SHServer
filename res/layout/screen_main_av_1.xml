<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_mainpage_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="410.0dip"
                android:layout_height="73.0dip"
                android:layout_marginTop="95.0dip"
                android:background="@drawable/ic_mainpage_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="432.0dip"
                android:layout_height="99.0dip"
                android:layout_marginTop="70.0dip"
                android:background="@drawable/ic_mainpage_weather" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linearlayout_main"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/screen_av_relativeLayout_new"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginRight="5dp"
                    android:layout_weight="9"
                    android:orientation="vertical"
                    android:background="@color/gray" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_recoder" />

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_mute" />

                    <ImageButton
                        android:id="@+id/imgbtn_hang_up"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="2.5"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/phone_hang_up_48" />

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_pause" />

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_photo" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dp"
                    android:layout_weight="5" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_mainpage_pg1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_call_incall_video_FrameLayout_local_video_new"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dp"
                    android:layout_weight="4"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_mute" />

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="2.3"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/phone_hang_up_48" />

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_photo" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/ic_mainpage_contacts" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>