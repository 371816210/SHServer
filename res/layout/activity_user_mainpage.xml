<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_mainpage_bg"
    android:orientation="vertical"
    android:paddingLeft="60.0dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="410.0dip"
            android:layout_height="73.0dip"
            android:layout_marginTop="95.0dip"
            android:background="@drawable/ic_mainpage_logo" />

        <ImageView
            android:layout_width="432.0dip"
            android:layout_height="99.0dip"
            android:layout_marginLeft="230.0dip"
            android:layout_marginTop="63.0dip"
            android:background="@drawable/ic_mainpage_weather" />
    </LinearLayout>

    <!--  第二层的布局 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- 两个视频显示的框的布局 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 3.中间层最左边大视频通话的布局（含按钮）  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="360.0dip"
                    android:layout_marginTop="20.0dip" >

                    <ImageView
                        android:layout_width="640.0dip"
                        android:layout_height="360.0dip"
                        android:background="@drawable/ic_mainpage_videobg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10.0dip"
                        android:text="与妻子视频通话中……"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_recoder" />

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_mute" />

                    <Button
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="2.5"
                        android:background="#FF0000"
                        android:gravity="center"
                        android:text="结  束"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_pause" />

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_photo" />
                </LinearLayout>
            </LinearLayout>  <!-- end of 3. -->
            
            <!-- 4.最中间小视频框的布局 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20.0dip"
                android:paddingLeft="3.0dip"
                android:paddingRight="3.0dip" >

                <ImageView
                    android:layout_width="321.0dip"
                    android:layout_height="180.0dip"
                    android:scaleType="center"
                    android:src="@drawable/ic_mainpage_pg1" />

                <ImageView
                    android:layout_width="321.0dip"
                    android:layout_height="180.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_mainpage_pg2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_mute" />

                    <Button
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="2.3"
                        android:background="#FF0000"
                        android:gravity="center"
                        android:text="结  束"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ImageButton
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_bg"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mainpage_photo" />
                </LinearLayout>
            </LinearLayout>  <!-- end of 4. -->
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="200.0dip"
                android:layout_height="408.dip"
                android:background="@drawable/ic_mainpage_contacts" />
        </LinearLayout>

        <!-- 第二层结束 -->
    </LinearLayout>



</LinearLayout>